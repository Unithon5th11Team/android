<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">


    <!-- 콘텐츠 -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/row_camera_category_iv"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:srcCompat="@drawable/mock_musical1"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_camera_category_search_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_badge_bg"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="3dp"
                    android:paddingTop="2dp"
                    android:text="현재 예약 가능"
                    android:textColor="@color/md_white"
                    android:textSize="@dimen/font_30"
                    android:textStyle="bold"
                    android:visibility="visible"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_camera_category_result_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_badge_bg"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="3dp"
                    android:paddingTop="2dp"
                    android:text="asdfasdfsdf"
                    android:textColor="@color/md_white"
                    android:textSize="@dimen/font_30"
                    android:textStyle="bold"
                    android:visibility="gone"/>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:paddingLeft="10dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/row_category_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="뮤지컬설명뮤지컬설명"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/row_category_local_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="뮤지컬설명뮤지컬설명"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatTextView
                    tools:text="asdfasdfasdf"
                    android:id="@+id/row_category_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <android.support.v7.widget.AppCompatTextView
                    android:paddingLeft="10dp"
                    android:id="@+id/row_category_grade_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
