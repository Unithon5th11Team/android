<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:weightSum="2">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@color/role_color_1">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_recommend_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/recommend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/font_45"
            android:textStyle="bold"
            tools:text="원하는 감정이 맞나요?"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/recommend_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/font_45"
            android:textStyle="bold"
            tools:text="원하는 감정이 맞나요?"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/recommend_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/font_45"
            android:textStyle="bold"
            tools:text="ㅈ"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#00000000"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/recommend_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/font_45"
            tools:text="줄거리"/>

    </LinearLayout>

</LinearLayout>
